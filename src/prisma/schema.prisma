datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  emailVerified Boolean @default(false)
  application application[]
}

model OTP {
  id Int @id @default(autoincrement())
  code String @unique
  email String
  createdAt DateTime @default(now())
}

model application {
  id Int @id @default(autoincrement())
  name String
  description String
  callbackUris String[]
  clientSecret String
  creator User @relation(fields: [creatorId], references: [id])
  creatorId Int
  createdAt DateTime @default(now())
}